{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}/src/main.cpp",
                "${workspaceFolder}/src/huf.cpp",
                "-o",
                "${workspaceFolder}/huf.exe",
                "-I",
                "${workspaceFolder}/include"
            ],
            "group": "build",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": "absolute"
            }
        }
    ]
}